{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "1.0.0",
  "description": "__MSG_description__",
  "author": "Troray",
  "homepage_url": "https://github.com/Troray/GetCookies",
  "default_locale": "zh_CN",
  "permissions": [
    "cookies",
    "clipboardWrite",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.weibo.com/*",
    "*://*.weibo.cn/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://weibo.com/*",
        "*://www.weibo.com/*",
        "*://s.weibo.com/*",
        "*://d.weibo.com/*",
        "*://passport.weibo.com/*"
      ],
      "js": [
        "js/content.js"
      ],
      "css": [
        "css/content.css"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png"
    },
    "default_popup": "popup.html",
    "default_title": "__MSG_appName__"
  },
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  }
}